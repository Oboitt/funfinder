<div class="container bg-white">
  <div class="back">
  <a href="/themes/index"><i class="fa-solid fa-arrow-right fa-rotate-180"></i></a>
  </div>

  <%= link_to "back", themes_index_path(params: params[:themes]) %>
  <div class="mapslide">
    <h1>Les Activit√©s</h1>
  </div>
  <div style="width: 100%; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="glide" data-controller="slide-card">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <div class="glide__slide card-slide">
        </div>
        <% @activities.each_with_index do |activity, index| %>
          <% if activity.photo.attached? %>
            <li class="glide__slide"><%= cl_image_tag activity.photo.key, class: "d-block w-100 img", alt: activity.name %><h5><%= activity.name %></h5>
          <p><%= activity.brand %></p>
          <p><%= activity.date_begin %></p></li>
          <% else %>
            <li class="glide__slide"><img src="/app/assets/images/funfinder.jpg" alt="Logo"><h5><%= activity.name %></h5>
          <p><%= activity.brand %></p>
          <p><%= activity.date_begin %></p><li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div data-glide-el="controls">
  <button data-glide-dir="<">Start</button>
  <button data-glide-dir=">">End</button>
</div>
  </div>
</div>



