
<div class="container">
  <h1><%= @activity.name  %><h1>
  <h2><%= @activity.brand %></h2>
  <div class="gap d-flex justify-content-center mt-5 ">
    <div class="card-trip bg-white p-5 w-50 d-flex justify-content-between"  style="border-radius: 15px;" >

      <div class="d-flex justify-content-center rounded-5">
        <% if @activity.photo.attached? %>
          <%= cl_image_tag @activity.photo.key,  crop: :fill, class: "img-activtity" %>
        <% else %>
          <img src="" alt="No image">
        <% end %>
      </div>

      <h3 class="theme"><%= @activity.theme %></h3>
      <h3><%= @activity.address %> - <%= @activtity.date_begin / @activtity.date_end %></h3>
      <h3 class="description_title">Description : </h3>
      <p><%= @activtity.content %></p>

      <div class="d-flex justify-content-center">
        <%= link_to "Ajouter aux Favoris", profile_path, class: "btn btn-primary" %>
        <%= link_to "Site Web", @activity.website, class: "btn btn-white" %>
      </div>
    </div>
  </div>
</div>
