<div class="container">
  <div class="flogo">
   <a href="">Back</a>
    <%=  image_tag "Funfinder_logo.png" %>
    <a href="">Favoris</a>
  </div>
    <div>
      <h1 style="color: #FA8460;"><%= @activity.name  %></h1>
      <h2><%= @activity.brand %></h2>
    <div class="d-flex justify-content-center rounded-5">
      <% if @activity.photo.attached? %>
        <%= cl_image_tag @activity.photo.key,  crop: :fill, class: "img-activity" %>
      <% else %>
        <img src="" alt="No image" style="max-width: 100%; max-height: 200px;">
      <% end %>
    </div>
    <div class="d-flex justify-content-betwen">
      <div>
        <h5 class="description_title"> Adresse:</h5>
        <h5><%= @activity.address %></h5>
    </div>
      <div>
        <h5 class="description_title"> Date: </h5>
        <% if @activity.date_begin?%>
          <h5><%= @activity.date_begin.to_date.strftime('%d-%b-%Y') %> - <%= @activity.date_end.to_date.strftime('%d-%b-%Y') %></h5>
        <% else %>
          <h5><%= @activity.date_begin = Date.today %></h5>
        <% end %>
    </div>
    </div>
    <h5 class="description_title">Description : </h5>
    <p><%= @activity.content %></p>
<div class="d-grip gap-2 col-6 mx-auto justify-content-center">
  <div>
    <%= link_to "Ajouter au favoris", @activity.website, class: "btn btn-primary " %>
  </div>
  <div>
    <%= link_to "Site Web", @activity.website, class: "btn btn-outline-primary mt-3" %>
  </div>
</div>
    </div>
  </div>
</div>
